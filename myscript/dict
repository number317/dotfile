#!/bin/bash
content=$(curl http://dict.youdao.com/w/eng/$1/#keyfrom=dict2.index 2>/dev/null | head -n 300)

echo $1 >> $HOME/.words
echo -en "\e[35;1mUK\e[0m: "; echo "$content" | grep -v "def" | grep --color -oP -m 1 "(?<=<span class=\"phonetic\">).*(?=<\/span>)" | tee -a $HOME/.words || echo "null"
echo "$content" | grep -v "def" | grep -v "href" | grep --color -oP "(?<=<li>).*(?=<\/li>)" | tee -a $HOME/.words

echo "--------------------" >> $HOME/.words
echo >> $HOME/.words
